import java.util.Scanner;

class Student {
    static int nextPRN = 1001;
    int prn;
    String name;
    int marks;
    String branch;

    // Constructor Overloading
    Student(String n) {
        prn = nextPRN++;
        name = n;
        marks = 0;
        branch = "Not Assigned";
    }

    Student(String n, int m) {
        prn = nextPRN++;
        name = n;
        marks = m;
        branch = "Not Assigned";
    }

    Student(String n, int m, String b) {
        prn = nextPRN++;
        name = n;
        marks = m;
        branch = b;
    }

    void showDetails() {
        System.out.println("PRN: " + prn + " | Name: " + name + " | Marks: " + marks + " | Branch: " + branch);
    }
}

public class StudentManagement {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Student[] students = new Student[100];
        int count = 0;
        int choice;

        do {
            System.out.println("\n===== Student Management Menu =====");
            System.out.println("1. Add Student (Name only)");
            System.out.println("2. Add Student (Name + Marks)");
            System.out.println("3. Add Student (Name + Marks + Branch)");
            System.out.println("4. View All Students");
            System.out.println("5. Search Student by PRN");
            System.out.println("6. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (choice) {
                case 1 -> {
                    System.out.print("Enter name: ");
                    String name = sc.nextLine();
                    students[count++] = new Student(name);
                    System.out.println("Student added successfully!");
                }

                case 2 -> {
                    System.out.print("Enter name: ");
                    String name = sc.nextLine();
                    System.out.print("Enter marks: ");
                    int marks = sc.nextInt();
                    students[count++] = new Student(name, marks);
                    System.out.println("Student added successfully!");
                }

                case 3 -> {
                    System.out.print("Enter name: ");
                    String name = sc.nextLine();
                    System.out.print("Enter marks: ");
                    int marks = sc.nextInt();
                    sc.nextLine(); // consume newline
                    System.out.print("Enter branch: ");
                    String branch = sc.nextLine();
                    students[count++] = new Student(name, marks, branch);
                    System.out.println("Student added successfully!");
                }

                case 4 -> {
                    if (count == 0) {
                        System.out.println("No students added yet!");
                    } else {
                        System.out.println("\n--- Student List ---");
                        for (int i = 0; i < count; i++) {
                            students[i].showDetails();
                        }
                    }
                }

                case 5 -> {
                    if (count == 0) {
                        System.out.println("No students to search!");
                    } else {
                        System.out.print("Enter PRN to search: ");
                        int searchPRN = sc.nextInt();
                        boolean found = false;

                        for (int i = 0; i < count; i++) {
                            if (students[i].prn == searchPRN) {
                                System.out.println("\n--- Student Found ---");
                                students[i].showDetails();
                                found = true;
                                break;
                            }
                        }

                        if (!found) {
                            System.out.println("No student found with PRN: " + searchPRN);
                        }
                    }
                }

                case 6 -> System.out.println("Exiting system... Goodbye!");

                default -> System.out.println("Invalid choice! Try again.");
            }

        } while (choice != 6);

        sc.close();
    }
}
